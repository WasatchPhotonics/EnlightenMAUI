<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnlightenMAUI.InfoPage">

    <FlexLayout BackgroundColor="#333" 
                Direction="Column"
                AlignItems="Center"
                JustifyContent="SpaceEvenly">

        <Image Source="enlighten_logo.png" HeightRequest="100" />

        <Label FontSize="22" TextColor="#eee" Text="{Binding version}" />

        <!-- seems more reasonable to use code-behind? -->
        <Button Padding="40,10,40,10" 
                Text="Learn more" 
                BackgroundColor="#27c0a1"
                TextColor="White" />
        <!-- Command="{Binding OpenWebCommand}" -->

    </FlexLayout>
</ContentPage>
