<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EnlightenMAUI"
             xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
             x:DataType="local:ViewModels.ClipboardViewModel"
             x:Class="EnlightenMAUI.ClipboardPage">

    <ContentPage.BindingContext>
        <local:ViewModels.ClipboardViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">

            <!-- Page header -->
            <Image Source="enlighten_logo.png" WidthRequest="300"/>

            <Label Text="Clipboard" Style="{StaticResource Headline}" SemanticProperties.HeadingLevel="Level1" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
